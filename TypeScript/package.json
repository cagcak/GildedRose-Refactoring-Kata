{
  "name": "gilded-rose-kata",
  "version": "1.0.0",
  "description": "Gilded Rose kata in TypeScript",
  "scripts": {
    "tsc": "./node_modules/typescript/bin/tsc",
    "ts-node": "node ./node_modules/ts-node/dist/bin.js",
    "eslint": "node ./node_modules/eslint/bin/eslint.js --config=.eslintrc.json app/**/*",
    "prettier": "node ./node_modules/prettier/bin-prettier.js --config=.prettierrc.json --write app/**/*",
    "jest": "node ./node_modules/jest/bin/jest.js --config=jest.config.ts",
    "rimraf": "node ./node_modules/rimraf/bin.js",
    "lint": "npm run eslint",
    "start:app": "npm run ts-node test/golden-master-text-test.ts",
    "prepare:debug:app": "npm run tsc -- --project tsconfig.json",
    "debug:app": "npm run prepare:debug:app && node inspect dist/app/gilded-rose.js",
    "precompile": "npm run lint && npm run rimraf dist coverage && npm run prettier",
    "compile": "npm run tsc -- --project tsconfig.build.json",
    "pretest": "npm run precompile",
    "test": "npm run jest",
    "test:watch": "npm run jest -- --watchAll"
  },
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^27.3.1",
    "prettier": "^2.7.1",
    "rimraf": "~3.0.2",
    "source-map-support": "^0.5.20",
    "ts-jest": "^27.0.7",
    "ts-node": "10.8.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.8.4"
  }
}
