{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@/*": ["app/*"]
    }
  },
  "exclude": ["node_modules", "dist", "jest.config.ts"]
}
